{
    "manifest_version": 3,
    "name": "文字コード判定拡張",
    "version": "1.0",
    "description": "ページ上に特定の文字列を検索・ハイライトします（URLごとに分岐）",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  